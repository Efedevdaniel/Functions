function compareVersions(v1, v2) {
  const version1 = v1.split('.');
  const version2 = v2.split('.');

  const maxLength = Math.max(
    version1.length,
    version2.length,
  );

  for (
    let i = 0;
    i < maxLength;
    i++
  ) {
    const num1 = parseInt(
      version1[i] || 0,
    );
    const num2 = parseInt(
      version2[i] || 0,
    );

    if (num1 < num2) {
      return -1;
    } else if (num1 > num2) {
      return 1;
    }
  }

  return 0;
}
